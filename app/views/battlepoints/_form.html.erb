<%= form_for @battlepoint, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :battle_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :battle_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hashtag, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hashtag, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :count, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :count, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                battlepoints_path, :class => 'btn' %>
  </div>
<% end %>
