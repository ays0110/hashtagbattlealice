<%- model_class = Battlepoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:battle_id) %></th>
      <th><%= model_class.human_attribute_name(:hashtag) %></th>
      <th><%= model_class.human_attribute_name(:count) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @battlepoints.each do |battlepoint| %>
      <tr>
        <td><%= link_to battlepoint.id, battlepoint_path(battlepoint) %></td>
        <td><%= battlepoint.battle_id %></td>
        <td><%= battlepoint.hashtag %></td>
        <td><%= battlepoint.count %></td>
        <td><%=l battlepoint.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_battlepoint_path(battlepoint), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      battlepoint_path(battlepoint),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_battlepoint_path,
            :class => 'btn btn-primary' %>
