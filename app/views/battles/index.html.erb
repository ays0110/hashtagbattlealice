<%- model_class = Battle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:hashtag1) %></th>
      <th><%= model_class.human_attribute_name(:hashtag2) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:since_number) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:ends_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= link_to battle.id, battle_path(battle) %></td>
        <td><%= battle.hashtag1 %></td>
        <td><%= battle.hashtag2 %></td>
        <td><%= battle.user_id %></td>
        <td><%= battle.since_number %></td>
        <td><%= battle.status %></td>
        <td><%= battle.ends_at %></td>
        <td><%=l battle.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_battle_path(battle), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      battle_path(battle),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_battle_path,
            :class => 'btn btn-primary' %>
