<%= form_for @battle, :html => { :class => 'form-horizontal' } do |f| %>

      <%= f.text_field :hashtag1, :class => 'text_field', :placeholder=>"First Hashtag"%>
   
   
   	  <%= select("battle", "hash1color", [["Red", 1], ["Orange", 2], ["Yellow", 3], ["Green", 4], ["Blue", 5], ["Purple", 6], ["Pink", 7], ["Grey", 8]], {:include_blank => false, :selected => 1 }, :id=>"color1_select") %>

      <br/></br>
   
      <%= f.text_field :hashtag2, :class => 'text_field', :placeholder=>"Second Hashtag" %>

 	  <%= select("battle", "hash2color", [["Red", 1], ["Orange", 2], ["Yellow", 3], ["Green", 4], ["Blue", 5], ["Purple", 6], ["Pink", 7], ["Grey", 8]], {:include_blank => false, :selected => 1 }, :id=>"color2_select") %>

      <br/></br>


    <%= f.submit nil, :class => 'btn btn-primary' %>

<% end %>
	<a href="/battles/<%=@battle.id%>/endbattle">
	<div class="btn btn-danger" style="width:113px;">End Battle</div></a>

<script>

    $("#color1_select").dropkick({
    	change:function(value,label){
			color = $(this).attr('value');
			$("#dk0-color1_select .dk-selected").css('color', '#fff');
			
			if(color == '1'){
				$("#dk0-color1_select .dk-selected").css('background-color', '#f26c4f');
			}
			else if(color == '2'){
				$("#dk0-color1_select .dk-selected").css('background-color', '#f68e56');
			}
			else if(color == '3'){
