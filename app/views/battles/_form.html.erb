			}
			else if(color == '5'){
				$("#dk0-color1_select .dk-selected").css('background-color', '#5674b9');
			}
			else if(color == '6'){
				$("#dk0-color1_select .dk-selected").css('background-color', '#a864a8');
			}
			else if(color == '7'){
				$("#dk0-color1_select .dk-selected").css('background-color', '#f26d7d');
			}
			else if(color == '8'){
				$("#dk0-color1_select .dk-selected").css('background-color', '#707070');
			}
			else{
				$("#dk0-color1_select .dk-selected").css('background-color', '#fff');
				$("#dk0-color1_select .dk-selected").css('color', '#98a7b2');
			}
		}
	});
	
